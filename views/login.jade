doctype 5
html(lang="en")
	head
		title JIRA Heroes: Login
	body
		if failed
			h4 Login failed, please check your username and password is correct
		h3 Login
		form(action="/user/login",method="post")
			label Username:
				input(type="text",name="username")
				br
			label Password:
				input(type="password",name="password")
				br
			input(type="submit",value="Login")
